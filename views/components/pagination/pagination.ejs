<section class="stories__pagination" aria-label="pagination">
	<hr>
	<% if( locals.numOfPages ) { %>
	<% for ( var i = 0; i < numOfPages; i++ ) { %>

		<a class="link" 
			<% if ( locals.searchTerm ) { %>
				href="/story-overview?index=<%= i + 1 %>&searchTerm=<%= searchTerm %>"
			<% } else { %>
				href="/story-overview?index=<%= i + 1 %>"
			<% } %>
			<% if ( i + 1 === pageIndex ) { %>
				aria-current="page"
			<% } %>
		><%= i + 1 %></a>

	<% } } %>
</section>
