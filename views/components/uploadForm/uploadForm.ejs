<form class="upload-form" method="post" enctype="multipart/form-data" action="/story-upload/upload">
	<label for="title">Titel</label>
	<input type="text" name="title" required>

	<label for="email">E-mail</label>
	<input type="email" name="email">

	<label for="phone">Telefoon nummer</label>
	<input type="text" name="phone">

	<label for="tags">Tags</label>
	<input type="text" name="tags">

	<label for="location">Locatie</label>
	<input type="text" name="location">
	
	<label for="time">Tijd van verhaal</label>
	<input type="text" name="time">

	<fieldset>
		<legend>Jouw verhaal</legend>

		<label for="upload-1">Upload a file</label>
		<input type="file" name="upload-1" multiple data-index="0">

		<label for="storyText-1">Story text</label>
		<textarea name="storyText-1" data-index="1"></textarea>

	</fieldset>


	<input type="submit" class="button">
</form>

<button data-add="textarea">
	Add TextArea
</button>

<button data-add="file">
	Add File
</button>

<button data-add="subtitle">
	Add Sub Title
</button>

<button data-add="video-link">
	Add Youtube Link
</button>