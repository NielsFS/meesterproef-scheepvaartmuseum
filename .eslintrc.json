{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
	"extends": "eslint:recommended",
    "parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": [
            "off"
        ],
        "no-var": [
            "error"
        ],
        "prefer-const": ["error", {
            "destructuring": "all"
        }],
        "space-in-parens": ["warn", "always"],
        "prefer-arrow-callback": ["error", {
            "allowNamedFunctions": true
        }]
    }
}